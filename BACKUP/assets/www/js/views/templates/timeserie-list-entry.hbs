<div class="wrapper timeseries">
  {{#if synced}}
    <div class="text">
      {{#if parameters.phenomenon.label}}
        <h1 style='color: #{{color}}'>
          {{parameters.phenomenon.label}}
        </h1>
      {{else}}
        <h1>
          <i>[unknown phenomenon]</i>
        </h1>
      {{/if}}
      {{#if active}}
        <h2>(in your list)</h2>
      {{/if}} 
      <h2><i class="icon-building"></i> {{station.properties.label}}</h2>
      <h2>Unit: {{uom}}</h2>
      {{#if expert}}
          <h2 style="font-size: 9px;">ID: {{id}}</h2>
          <h2>{{parameters.procedure.label}}</h2>
          <h2>{{parameters.category.label}}</h2>
          <h2>{{parameters.feature.label}}</h2>
          <h2>{{parameters.offering.label}}</h2>
      {{/if}}
      
    </div>
    <div class="element">
      {{#if active}}
        <a class="action text-muted" data-action="dummy" data-navigate="#legend">
          <i class="icon-ok"></i>
        </a>
      {{else}}
        <a class="action" data-action="timeseries:add" data-navigate="#chart">
          <i class="icon-plus"></i>
        </a>
      {{/if}}

      {{#each additionalActions}}
        <a class="action" data-action="{{callback}}" 
          {{#if navigate}}
            data-navigate="{{navigate}}"
          {{/if}}
        >
          <i class="{{icon}}"
            {{#if color}}
              style="color: #{{../../color}};"
            {{/if}}
          ></i>
        </a>
      {{/each}}
    </div>
  {{else}}
    <div class="text">
      <h1>
        <i>
          [fetching data]
        </i>
      </h1>
    </div>
    <div class="element">
      <i class="icon-spinner icon-spin"></i>
    </div>
  {{/if}}
</div>