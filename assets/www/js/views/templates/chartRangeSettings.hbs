<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h1 class="modal-title"><i class="icon-time"></i> Time Range</h1>
    </div>
    <div class="modal-body">
      <div class="custom-range-button-wrapper">

        <button class="custom-range-from-picker-btn btn btn-default big-btn">
          <i class="icon-step-backward"></i>
          from:<br/>
          <span class="custom-range-from-label"></span> 
        </button>

        <button class="custom-range-till-picker-btn btn btn-default big-btn">
          <i class="icon-step-forward"></i>
          till:<br/>
          <span class="custom-range-till-label"></span>
        </button>
      </div>

      <div class="warnings">
      </div>

      <div class="panel-group" id="accordion">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">
              <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                or one of the presets
              </a>
            </h4>
          </div>
          <div id="collapseOne" class="panel-collapse collapse in">
            <div class="panel-body">
              {{#each presets}}
                <button class="btn btn-default multiline-button preset-btn" data-preset-value="{{value}}">
                  {{label}}
                </button>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-primary confirm-range-btn" data-dismiss="modal">OK</button>
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>
  </div>
</div>