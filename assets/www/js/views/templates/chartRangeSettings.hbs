<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h1 class="modal-title"><i class="icon-time"></i> Time Range</h1>
      ISO8601-TIMESPAN: <b>{{current.din}}</b>
      <br/>
      FROM: <b>{{current.from}}</b> UNTILL: <b>{{current.till}}</b>
    </div>
    <div class="modal-body">

      <div class="accordion" id="accordion-timerange-type">
        <div class="accordion-group">
          <div class="accordion-heading">
            <h4 class="panel-title" style="background: #f5f5f5">
              <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion-timerange-type" href="#timerange-type-preset">
                Presets
              </a>
            </h4>
          </div>
          <div id="timerange-type-preset" class="accordion-body collapse in">
            <div class="accordion-inner">
              <div class="row">
                {{#each presets}}
                  <div class="col-4">
                    <button class="btn btn-default multiline-button preset-btn" data-preset-value="{{value}}" data-preset-param="{{param}}">
                      {{label}}
                    </button>
                  </div>
                {{/each}}
              </div>
            </div>
          </div>
        </div>

        <div class="accordion-group">
          <div class="accordion-heading">
            <h4 class="panel-title" style="background: #f5f5f5">
              <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion-timerange-type" href="#timerange-type-custom">
                Custom range
              </a>
            </h4>
          </div>
          <div id="timerange-type-custom" class="accordion-body collapse">
            
            <div class="accordeon" id="from-till-accordeon" style="margin: 10px;">
              <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#from-till-accordeon" href="#from-accordeon-panel">
                      <i class="icon-step-backward"></i> from <span class="custom-range-from-label"></span> 
                    </a>
                </div>
                <div id="from-accordeon-panel" class="accordion-body collapse">
                  <div class="accordion-inner">
                    <input type="hidden" name="customRangeFromPicker" id="customRangeFromPicker" class="i-txt" />
                  </div>
                </div>
              </div>

              <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#from-till-accordeon" href="#till-accordeon-panel">
                      <i class="icon-step-forward"></i> untill <span class="custom-range-till-label"></span> 
                    </a>
                </div>
                <div id="till-accordeon-panel" class="accordion-body collapse">
                  <div class="accordion-inner">
                    <input type="hidden" name="customRangeTillPicker" id="customRangeTillPicker" class="i-txt" />
                  </div>
                </div>
              </div>
            </div>

            <div class="text-right">
              <button class="btn btn-primary custom-range-ok" style="margin: 0 10px 10px 0px;">
                <i class="icon-ok"></i> <b>OK</b>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>
  </div>
</div>