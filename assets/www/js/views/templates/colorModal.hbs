<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h1 class="modal-title"><i class="icon-adjust" style="color: #{{currentColor}};"></i> Change color</h1>
    </div>
    <div class="modal-body">
      <p>
        <div class="row">
          <div class="col-12">
            <button class="btn default-color-btn" data-color="{{defaultColor}}" style="background: #{{defaultColor}}">default</button>
          </div>
          {{#each colors}}
            <div class="col-md-4 col-xs-4 col-sm-4">
              <button class="btn color-btn" data-color="{{this}}" style="background: #{{this}}"></button>   
            </div>
          {{/each}}
        </div>
      </p>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>
  </div>
</div>